generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Transaksi {
  id          String    @id @default(uuid())
  tanggal     DateTime  @default(now())
  jenis       String    // 'Pemasukan' atau 'Pengeluaran'
  jumlah      Float
  deskripsi   String?
  createdAt   DateTime  @default(now())
}